        async function formSubmit() {
            // Get the selected address
            const selectedAddress = document.querySelector('input[name="selectedAddress"]:checked');
            if (!selectedAddress) {
                alert('Please select an address');
                return;
            }
            // Get the selected payment method
            const paymentMethod = document.querySelector('input[name="payment_option"]:checked');
            if (!paymentMethod) {
                alert('Please select a payment method');
                return;
            }

            if (paymentMethod.value == 'Wallet') {
    // Get the subtotal element and extract its inner text
    const subtotalElement = document.querySelector('.product-subtotal .text-brand');
    if (subtotalElement) {
        // Extract the inner text and remove any '$' symbols
        const subtotalText = subtotalElement.innerText;
        const subtotal = parseFloat(subtotalText.replace('$', '').trim());
        
        // Check if the subtotal is a valid number
        if (!isNaN(subtotal)) {
           // Redirect to wallet payment route with subtotal and addressId as query parameters
           const selectedAddressId = selectedAddress.value;
           
            window.location.href = '/walletPayment?subtotal=' + subtotal + '&addressId=' + selectedAddressId + '&paymentMethod=' + paymentMethod.value;

            return;
        } else {
            console.error('Invalid subtotal:', subtotalText);
            // Handle the error or inform the user about the invalid subtotal
            return;
        }
    } else {
        console.error('Subtotal element not found');
        // Handle the error or inform the user if the subtotal element is not found
        return;
    }


}

            

    
            // If online payment is selected, open Razorpay checkout
            if (paymentMethod.value === 'Online payment') {
               
                const response = await fetch('/place-order', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                   
                });
                const data = await response.json();
                if (data.success) {
                    const options = {
                        key: 'rzp_test_nrsjMCLp4uBA73',
                        amount: data.amount,
                        currency: 'INR',
                        order_id: data.orderId,
                        name: 'Your Company Name',
                        description: 'Purchase Description',
                        handler: function (response) {
                            document.getElementById('razorpayPaymentId').value = response.razorpay_payment_id;
                            document.getElementById('razorpaySignature').value = response.razorpay_signature;
                            document.getElementById('hiddenForm').submit();
                        }
                    };
                    const rzp = new Razorpay(options);
                    rzp.open();
                } else {
                    alert('Failed to create Razorpay order');
                }
            } else {
                // Set the selected address and payment method in the hidden form
                document.getElementById('selectedAddressInput').value = selectedAddress.value;
                document.getElementById('paymentMethodInput').value = paymentMethod.value;
    
                // Submit the hidden form
                document.getElementById('hiddenForm').submit();
            }
        }
