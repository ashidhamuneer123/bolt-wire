                                    <td><%= order.paymentMethod %></td>
                                    <% if(order.couponDiscount>0){ %>
                                    <td>$<%=(item.quantity * item.productId.selling_price)- (item.quantity * item.productId.selling_price * (order.couponDiscount/100))  %></td>
                                    <% } %>
