    <script>
        async function cancelOrder(orderId,productId,quantity){
            try {
                
                event.preventDefault()
                
                const response = await axios.post('/admin/cancel', { orderId,productId, quantity });
                if(response.data.success){
                    location.reload()
                }
            } catch (error) {
                console.error('Error cancelling order:', error);
            }
        }
    </script>
    <script>
        async function updateStatus(orderId, status , productId) {
            try {
                
                event.preventDefault()
                const response = await axios.post('/admin/update-status', { orderId, status,productId });
                if (response.data.success) {
                    location.reload()
                  
                }
            } catch (error) {
                console.error('Error updating status:', error);
            }
        }
    </script>
    
